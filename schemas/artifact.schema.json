{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rice-factor.dev/schemas/artifact.schema.json",
  "title": "ArtifactEnvelope",
  "description": "Universal artifact envelope that wraps all artifact types",
  "type": "object",
  "required": [
    "artifact_type",
    "artifact_version",
    "id",
    "status",
    "created_at",
    "created_by",
    "payload"
  ],
  "properties": {
    "artifact_type": {
      "type": "string",
      "enum": [
        "ProjectPlan",
        "ArchitecturePlan",
        "ScaffoldPlan",
        "TestPlan",
        "ImplementationPlan",
        "RefactorPlan",
        "ValidationResult"
      ],
      "description": "The type of artifact"
    },
    "artifact_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$",
      "description": "Version of the artifact schema (e.g., '1.0')"
    },
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for this artifact"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "approved", "locked"],
      "description": "Artifact lifecycle status"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "created_by": {
      "type": "string",
      "enum": ["human", "llm"],
      "description": "Creator type"
    },
    "depends_on": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "UUIDs of artifacts this artifact depends on"
    },
    "payload": {
      "type": "object",
      "description": "Type-specific artifact payload"
    }
  },
  "additionalProperties": false
}
