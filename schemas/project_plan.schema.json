{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rice-factor.dev/schemas/project_plan.schema.json",
  "title": "ProjectPlanPayload",
  "description": "Defines what the system is, not how it's built",
  "type": "object",
  "required": ["domains", "modules", "constraints"],
  "properties": {
    "domains": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "responsibility"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Domain name"
          },
          "responsibility": {
            "type": "string",
            "description": "What this domain is responsible for"
          }
        },
        "additionalProperties": false
      },
      "description": "List of domains in the project"
    },
    "modules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "domain"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Module name"
          },
          "domain": {
            "type": "string",
            "description": "Domain this module belongs to"
          }
        },
        "additionalProperties": false
      },
      "description": "List of modules in the project"
    },
    "constraints": {
      "type": "object",
      "required": ["architecture", "languages"],
      "properties": {
        "architecture": {
          "type": "string",
          "enum": ["clean", "hexagonal", "ddd", "custom"],
          "description": "Architecture pattern"
        },
        "languages": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          },
          "description": "Programming languages used"
        }
      },
      "additionalProperties": false,
      "description": "Project constraints"
    },
    "polyglot": {
      "oneOf": [
        {"type": "null"},
        {
          "type": "object",
          "properties": {
            "primary_language": {
              "type": "string",
              "description": "Primary language of the project"
            },
            "language_configs": {
              "type": "array",
              "description": "Per-language configurations",
              "items": {
                "type": "object",
                "required": ["name"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Language name (e.g., 'python', 'javascript')"
                  },
                  "version": {
                    "type": "string",
                    "description": "Language/runtime version"
                  },
                  "framework": {
                    "type": "string",
                    "description": "Primary framework (e.g., 'flask', 'react')"
                  },
                  "package_manager": {
                    "type": "string",
                    "description": "Package manager (e.g., 'pip', 'npm')"
                  },
                  "test_runner": {
                    "type": "string",
                    "description": "Test runner command (e.g., 'pytest', 'jest')"
                  },
                  "build_command": {
                    "type": "string",
                    "description": "Build command if applicable"
                  },
                  "source_dir": {
                    "type": "string",
                    "description": "Source directory for this language"
                  }
                },
                "additionalProperties": false
              }
            },
            "language_modules": {
              "type": "array",
              "description": "Language-specific modules",
              "items": {
                "type": "object",
                "required": ["name", "language", "domain"],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Module name"
                  },
                  "language": {
                    "type": "string",
                    "description": "Programming language"
                  },
                  "domain": {
                    "type": "string",
                    "description": "Domain this module belongs to"
                  },
                  "path": {
                    "type": "string",
                    "description": "Path to module directory"
                  },
                  "entry_point": {
                    "type": "string",
                    "description": "Entry point file"
                  },
                  "dependencies": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "List of module dependencies"
                  }
                },
                "additionalProperties": false
              }
            },
            "integrations": {
              "type": "array",
              "description": "Cross-language integrations",
              "items": {
                "type": "object",
                "required": ["type", "provider_language", "consumer_language"],
                "properties": {
                  "type": {
                    "type": "string",
                    "description": "Integration type (e.g., 'rest_api', 'grpc', 'message_queue')"
                  },
                  "provider_language": {
                    "type": "string",
                    "description": "Language providing the service"
                  },
                  "consumer_language": {
                    "type": "string",
                    "description": "Language consuming the service"
                  },
                  "endpoint": {
                    "type": "string",
                    "description": "API endpoint or service name"
                  },
                  "protocol": {
                    "type": "string",
                    "description": "Communication protocol"
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        }
      ],
      "description": "Configuration for polyglot (multi-language) projects"
    }
  },
  "additionalProperties": false
}
