{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://rice-factor.dev/schemas/scaffold_plan.schema.json",
  "title": "ScaffoldPlanPayload",
  "description": "Creates structure only - no logic",
  "type": "object",
  "required": ["files"],
  "properties": {
    "files": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["path", "description", "kind"],
        "properties": {
          "path": {
            "type": "string",
            "description": "File path to create"
          },
          "description": {
            "type": "string",
            "description": "Purpose of this file"
          },
          "kind": {
            "type": "string",
            "enum": ["source", "test", "config", "doc"],
            "description": "Type of file"
          }
        },
        "additionalProperties": false
      },
      "description": "Files to scaffold"
    }
  },
  "additionalProperties": false
}
