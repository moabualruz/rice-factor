# Rice-Factor Web Interface - Environment Configuration
#
# Copy this file to .env and customize as needed.
# All variables are optional unless marked as [REQUIRED].

# ============================================
# Core Settings
# ============================================

# Debug mode (enables API docs, CORS for dev, hot reload)
RF_WEB_DEBUG=false

# Secret key for session signing [REQUIRED in production]
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
RF_WEB_SECRET_KEY=change-me-in-production

# Server port
RF_WEB_PORT=8000

# Project root path (where rice-factor project lives)
# In Docker, this should match the volume mount
RF_PROJECT_PATH=/path/to/your/project

# ============================================
# OAuth Configuration (Optional)
# ============================================
# Leave empty to run without authentication (local use)

# GitHub OAuth
# Create app at: https://github.com/settings/developers
# Callback URL: http://localhost:8000/api/v1/auth/github/callback
RF_WEB_GITHUB_CLIENT_ID=
RF_WEB_GITHUB_CLIENT_SECRET=

# Google OAuth
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Callback URL: http://localhost:8000/api/v1/auth/google/callback
RF_WEB_GOOGLE_CLIENT_ID=
RF_WEB_GOOGLE_CLIENT_SECRET=

# ============================================
# Session Settings
# ============================================

# Session cookie max age in seconds (default: 7 days)
RF_WEB_SESSION_MAX_AGE=604800

# Session cookie name
RF_WEB_SESSION_COOKIE_NAME=rf_session

# ============================================
# CORS Settings (for development)
# ============================================

# Comma-separated list of allowed origins
# Default includes common dev server ports
RF_WEB_CORS_ORIGINS=http://localhost:5173,http://localhost:3000
